@model Identity.API.ViewModels.RegisterViewModel

    <div class="user-registration-page">
        @*<div class="page-header">
            <h1>User Registration</h1>
        </div>*@
        <div class="navbar navbar-inverse navbar-fixed-top">

            
                <div class="nav navbar-nav">
                    <div class="col-sm-12 text-left" >
                        <h4>You have already an account?</h4>
                        @*<button class="btn">Sign Up</button>*@
                    </div>
                </div>
            </div>
            
            @Html.PartialAsync("_ValidationSummary")
            <div class="row">
                <div class="col-sm-12">
                    <div class="panel panel-default">
                        @*<div class="panel-heading">
                            <h3 class="panel-title">Create New Account</h3>
                        </div>*@

                        <div class="panel-body">
                            <form asp-route="Login">
                                <input type="hidden" asp-for="ReturnUrl" />
                                <div class="form-group">
                                    <h3>User Registration</h3>

                                </div>
                                <fieldset>
                                    <div class="row">
                                        <div class="form-group col-sm-6">
                                            @*<label asp-for="User.Name" class="control-label form-lable">FirstName</label>*@
                                            <input asp-for="User.Name" placeholder="FirstName" class="form-control form-input" />
                                            <span asp-validation-for="User.Name" class="text-danger" ></span>
                                        </div>

                                        <div class="form-group col-sm-6">
                                            @*<label asp-for="User.LastName" class="control-label form-lable">LastName</label>*@
                                            <input asp-for="User.LastName" placeholder="LastName" class="form-control form-input" />
                                            <span asp-validation-for="User.LastName" class="text-danger" ></span>
                                        </div>
                                        <div class="form-group col-sm-6">
                                            @*<label asp-for="User.Street" class="control-label form-lable">Address</label>*@
                                            <input asp-for="User.Street" placeholder="Address" class="form-control form-input" />
                                            <span asp-validation-for="User.Street" class="text-danger" ></span>
                                        </div>
                                        <div class="form-group col-sm-6">
                                            @*<label asp-for="User.City" class="control-label form-lable"></label>*@
                                            <input asp-for="User.City" placeholder="City" class="form-control form-input" />
                                            <span asp-validation-for="User.City" class="text-danger" ></span>
                                        </div>
                                        <div class="form-group col-sm-6">
                                            @*<label asp-for="User.State" class="control-label form-lable"></label>*@
                                            <input asp-for="User.State" placeholder="State" class="form-control form-input" />
                                            <span asp-validation-for="User.State" class="text-danger" ></span>
                                        </div>
                                        <div class="form-group col-sm-6">
                                            @*<label asp-for="User.Country" class="control-label form-lable"></label>*@
                                            <input asp-for="User.Country" placeholder="Country" class="form-control form-input" />
                                            <span asp-validation-for="User.Country" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-sm-6">
                                            @*<label asp-for="User.ZipCode" class="control-label form-lable">PostCode</label>*@
                                            <input asp-for="User.ZipCode" placeholder="ZipCode" class="form-control form-input" />
                                            <span asp-validation-for="User.ZipCode" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-sm-6">
                                            @*<label asp-for="User.PhoneNumber" class="control-label form-lable">Phone Number</label>*@
                                            <input asp-for="User.PhoneNumber" placeholder="PhoneNumber" class="form-control form-input" />
                                            <span asp-validation-for="User.PhoneNumber" class="text-danger" ></span>
                                        </div>
                                        <div class="form-group col-sm-6">
                                            @*<label asp-for="User.CardNumber" class="control-label form-lable">Card Number</label>*@
                                            <input asp-for="User.CardNumber" placeholder="CardNumber" class="form-control form-input" />
                                            <span asp-validation-for="User.CardNumber" class="text-danger" ></span>
                                        </div>
                                        <div class="form-group col-sm-6">
                                            @*<label asp-for="User.CardHolderName" class="control-label form-lable">Cardholder Name</label>*@
                                            <input asp-for="User.CardHolderName" placeholder="Cardholder Name" class="form-control form-input" />
                                            <span asp-validation-for="User.CardHolderName" class="text-danger" ></span>
                                        </div>
                                        <div class="form-group col-sm-3">
                                            <label asp-for="User.Expiration" class="control-label form-lable" style="margin-top:3px">Expiration Date</label>
                                            <input asp-for="User.Expiration" placeholder="MM/YY" class="form-control form-input form-input-small" style="margin-top: 2px" />
                                            <span asp-validation-for="User.Expiration" class="text-danger" ></span>
                                        </div>
                                        <div class="form-group col-sm-3">
                                            <label asp-for="User.SecurityNumber" class="control-label form-lable" style="margin-top: 3px">Security Code</label>
                                            <input asp-for="User.SecurityNumber" class="form-control form-input" style="margin-top:2px" />
                                            <span asp-validation-for="User.SecurityNumber" class="text-danger" ></span>
                                        </div>
                                    </div>

                                    

                                    <div class="row">
                                        <div class="form-group col-sm-6">
                                            @*<label asp-for="Email" class="control-label form-label"></label>*@
                                            <input asp-for="Email" placeholder="Email" class="form-control form-input" />
                                            <span asp-validation-for="Email" class="text-danger"></span>
                                        </div>
                                        @*<div class="form-group col-sm-offset-6"></div>*@
                                        <div class="form-group col-sm-6">
                                            @*<label asp-for="Password" class="control-label form-label"></label>*@
                                            <input asp-for="Password" placeholder="Password" class="form-control form-input" />
                                            <span asp-validation-for="Password" class="text-danger"></span>
                                        </div>
                                        <div class="form-group col-sm-6">
                                            @*<label asp-for="ConfirmPassword" class="control-label form-label">Confirm Password</label>*@
                                            <input asp-for="ConfirmPassword" style="margin-bottom:25px"  placeholder="Confirm Password" class="form-control form-input" />
                                            <span asp-validation-for="ConfirmPassword" class="text-danger"></span>
                                        </div>
                                    </div>



                                    <div class="form-group">
                                        <div class="text-center">
                                            <button type="submit" class="btn ">Register</button>
                                        </div>
                                    </div>
                                </fieldset>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
