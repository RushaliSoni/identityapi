@model LoginViewModel

<div class="login-page">
    @*<div class="page-header">
            <h1>Login</h1>
        </div>*@

    @Html.Partial("_ValidationSummary")

    <div class="row">

        @if (Model.EnableLocalLogin)
        {
            <div class="col-sm-12 col-md-8 col-lg-8 col-md-offset-2 col-lg-offset-2">
                <div class="panel panel-default">
                    @*<div class="panel-heading">
                            <h3 class="panel-title">User Login</h3>
                        </div>*@
                    <div class="panel-body">
                        <form asp-route="twofa">
                            <input type="hidden" asp-for="ReturnUrl" />

                            <fieldset>
                                <div class="form-group">
                                    <h3>Two Factor Authentication</h3>

                                </div>
                                <div class="form-group">

                                    <input class="form-control" placeholder="Enter verification Code" asp-for="Email" autofocus>
                                </div>

                                <div class="form-group">
                                    
                                        <button class="btn" style="color:white; margin-top:20px; margin-right: 10px" asp-action="twofa"
                                                asp-controller="UserRegistration"
                                                asp-route-returnUrl="@Model.ReturnUrl">
                                            Verify
                                        </button>
                                    
                                    
                                        <button class="btn" style="margin-top:20px; background-color: lightgray" asp-action="twofa"
                                                asp-controller="UserRegistration"
                                                asp-route-returnUrl="@Model.ReturnUrl">
                                            Cancle
                                        </button>
                                    
                                </div>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        }

      
    </div>
</div>